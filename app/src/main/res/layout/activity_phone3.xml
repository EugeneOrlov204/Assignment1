<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/main_top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/menu_color"
        app:layout_constraintBottom_toTopOf="@id/main_bottom_relative_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.5" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/exampleAppCompatTextView"
        style="@style/RegularText"
        android:layout_margin="@dimen/titleMarginTopSize_phone3"
        android:text="@string/activity_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/personImageImageView"
        android:layout_width="@dimen/sizeOfPicture_phone3"
        android:layout_height="@dimen/sizeOfPicture_phone3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/personNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/titleMarginTopSize_phone3"
        android:fontFamily="@font/noto_sans_t_c_medium"
        android:text="@string/image_text"
        android:textColor="@color/white"
        android:textSize="@dimen/regularTextSize_phone3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/personProfessionTextView"
        style="@style/DescriptionText"
        android:layout_marginTop="@dimen/professionMarginTopSize_phone3"
        android:text="@string/name_of_profession"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/residenceAddressOfPersonTextView"
        style="@style/DescriptionText"
        android:layout_marginTop="@dimen/residenceAddressMarginTopSize_phone3"
        android:text="@string/residence_address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415" />


    <View
        android:id="@+id/main_bottom_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_top_relative_layout"
        app:layout_constraintVertical_weight="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/socialNetworkFacebookButton"
        style="@style/SocialNetworkButton"
        android:layout_alignParentStart="true"
        android:text="@string/facebook_logo"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/socialNetworkLinkedInButton"
        style="@style/SocialNetworkButton"
        android:text="@string/linkedin_logo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/socialNetworkVkontakteButton"
        style="@style/SocialNetworkButton"
        android:layout_alignParentEnd="true"
        android:text="@string/vkontakte_logo"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        style="@style/ProfileButton"
        android:background="@drawable/rounded_corner"
        android:onClick="goToPhoneOne"
        android:text="@string/edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />


</androidx.constraintlayout.widget.ConstraintLayout>