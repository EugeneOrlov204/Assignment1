<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/myProfileFragment2">

    <fragment
        android:id="@+id/myProfileFragment2"
        android:name="com.shpp.eorlov.assignment1.ui.myprofile.MyProfileFragment"
        android:label="my_profile_fragment"
        tools:layout="@layout/fragment_my_profile" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.shpp.eorlov.assignment1.ui.mainfragment.MainFragment"
        android:label="fragment_content"
        tools:layout="@layout/fragment_content" >
        <action
            android:id="@+id/action_mainFragment_to_detailViewFragment"
            app:destination="@id/detailViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailViewFragment"
        android:name="com.shpp.eorlov.assignment1.ui.details.DetailViewFragment"
        android:label="fragment_detail_view"
        tools:layout="@layout/fragment_detail_view" >
        <argument
            android:name="contact"
            app:argType="com.shpp.eorlov.assignment1.model.UserModel" />
    </fragment>
</navigation>