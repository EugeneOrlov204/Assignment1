<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment1Part1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/alabaster</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">
            @style/WindowAnimations
        </item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>

    </style>

    <!-- Code from here https://medium.com/mobile-app-development-publication/animate-android-activities-transition-bf7f89a74b35-->
    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/enter_activity
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/exit_activity
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/enter_activity
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/exit_activity
        </item>
    </style>


    <style name="user_name_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="social_network_button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/social_network_button</item>

    </style>

    <style name="profile_button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="regular_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="login_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:backgroundTint">@color/silver</item>
        <item name="android:textColorHint">@color/alabaster</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="password_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:backgroundTint">@color/silver</item>
        <item name="android:textColorHint">@color/alabaster</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="add_contact_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B2B2B3</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="add_contact_text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="hintTextColor">#E0E0E0</item>
        <item name="backgroundTint">#BDBDBD</item>
    </style>

    <style name="add_contact_text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/black_russian</item>
        <item name="singleLine">true</item>
    </style>

</resources>