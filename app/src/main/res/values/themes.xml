<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment1Part1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/alabaster</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/alabaster</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/steel_gray</item>

        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">
            @style/WindowAnimations
        </item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>

    </style>

    <!-- Code from here https://medium.com/mobile-app-development-publication/animate-android-activities-transition-bf7f89a74b35-->
    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/enter_activity
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/exit_activity
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/enter_activity
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/exit_activity
        </item>
    </style>


    <style name="UserNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SocialNetworkButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/social_network_button</item>

    </style>

    <style name="TextInputLayoutSearchField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="background">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconDrawable">@drawable/ic_search_button</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/light_gray</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputEditTextSearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="maxLines">1</item>
        <item name="android:background">@drawable/search_field_edit_text</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">@dimen/search_contacts_edit_text_text_size_18sp</item>
    </style>

    <style name="ProfileButton">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RegularText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="LoginField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:backgroundTint">@color/silver</item>
        <item name="android:textColorHint">@color/alabaster</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="PasswordField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:backgroundTint">@color/silver</item>
        <item name="android:textColorHint">@color/alabaster</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="InputFieldTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#B2B2B3</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="backgroundTint">@color/orange</item>

    </style>

    <style name="InputFieldTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@color/black_russian</item>
        <item name="singleLine">true</item>
    </style>

</resources>