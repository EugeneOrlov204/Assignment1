<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment1Part1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/alabaster</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cardview_dark_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">
            @style/WindowAnimations
        </item>
    </style>

    <!-- Code from here https://medium.com/mobile-app-development-publication/animate-android-activities-transition-bf7f89a74b35-->
    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/enter_activity
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/exit_activity
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/enter_activity
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/exit_activity
        </item>
    </style>

    <style name="SignInBackground">
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="SignInTextColor">
        <item name="android:textColor">#FFCDDC39</item>
    </style>

    <style name="SignInSecondTextColor">
        <item name="android:textColor">#00BCD4</item>
    </style>

    <style name="InputFieldTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00BCD4</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="backgroundTint">@color/orange</item>

    </style>

</resources>